<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalMatchingGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
           Padding="30,0"
           Spacing="25"
            BackgroundColor="BlanchedAlmond">

            <Button x:Name="PlayAgainButton"
            Text="Play Again?"
            TextColor="RosyBrown"
            FontSize="Large" Clicked="PlayAgainButton_Clicked"
            BackgroundColor="White"
            BorderColor="White"     />

            <Label x:Name="TimeElapsed"
            Text="Time Elapsed: 0.0 seconds"
             FontSize="Large"
             TextColor="RosyBrown"   />

            <FlexLayout x:Name="AnimalButtons"
            Wrap="Wrap" 
            MaximumWidthRequest="400"
            IsVisible="False">
            

                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="LightPink" BorderColor="White" BorderWidth="1" Clicked="Button_Clicked"/>
 
            </FlexLayout>


        </VerticalStackLayout>
       
    </ScrollView>

</ContentPage>
